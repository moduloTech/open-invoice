<%= javascript_include_tag 'send_invoice' %>

<%= form_tag(main_app.recipients_path, class: 'form-horizontal', id: :send_invoice_form) do %>
  <%= hidden_field_tag :invoice_id, @object.id %>
  <div class="form-group control-group">
    <div class="controls col-sm-2">
      <%= check_box_tag :list_recipients, 1, true, class: 'pull-right' %>
    </div>
    <%= label_tag :list_recipients, t('admin.views.send_invoice.list_recipients'), class: 'col-sm-10' %>
  </div>
  <div class="form-group control-group">
    <label class="col-sm-2 control-label"><%= t('admin.views.send_invoice.from') %></label>
    <div class="col-sm-10 controls">
      <%= select_tag nil, options_for_select(@recipients), include_blank: true, id: :existing, class: 'form-control',
                     data: { filteringselect: true } %>
    </div>
  </div>
  <div class="form-group control-group">
    <label class="col-sm-2 control-label"><%= t('admin.views.send_invoice.recipient_s') %></label>
    <div class="col-sm-10 controls">
      <%= text_field_tag(nil, nil, id: :new_name, class: 'form-control', style: 'display:inline', placeholder: t('admin.views.send_invoice.name')) %>
      <%= email_field_tag(nil, nil, id: :new_email, class: 'form-control', style: 'display:inline', placeholder: t('admin.views.send_invoice.email')) %>
      <%= button_tag t('admin.views.send_invoice.add'), type: :button, class: 'btn btn-secondary disabled', id: :add_recipient, style: 'margin-left: 8px' %>
    </div>
  </div>
  <div class="form-group form-actions">
    <div class="col-sm-offset-2 col-sm-10">
      <%= button_tag class: 'btn btn-primary js-submit disabled' do %>
        <span class="icon-check"></span>
        <%= t('admin.views.send_invoice.submit') %>
      <% end %>
    </div>
  </div>
<% end %>
